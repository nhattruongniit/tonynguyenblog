---
import { getCollection } from 'astro:content';
import { render } from 'astro:content';

import BaseLayout from '../../layouts/BaseLayout.astro';
import Icon from '../../components/Icon.astro';

export async function getStaticPaths() {
	const course = await getCollection('course');
	return course.map((entry) => ({
		params: { slug: entry.id },
		props: { entry },
	}));
}

const { entry } = Astro.props;
const { Content } = await render(entry);

---

<BaseLayout 
	title={entry.data.title} 
	description={entry.data.description} 
	image={`https://www.tonynguyen.me/${entry.data.img}`} 
	url={`https://www.tonynguyen.me/blog/${entry.id}`}
>
	<div class="stack gap-20">
		<div class="stack gap-15">
			<header>
				<div class="wrapper stack gap-2">
					<a class="back-link flex items-center" href="/course"><Icon icon="arrow-left" /> <span class="ablog">Course</span></a>
				</div>
			</header>
			<main class="course">
				<Content />
			</main>
		</div>
	</div>
</BaseLayout>

<style>
	header {
	}

	.back-link {
		display: none;
	}

	.details {
		display: flex;
		flex-direction: column;
		padding: 0.5rem;
		gap: 1.5rem;
		justify-content: space-between;
		align-items: center;
	}

	.tags {
		display: flex;
		gap: 0.5rem;
	}

	.description {
		font-size: var(--text-lg);
	}

	.content {
		max-width: 90ch;
		margin-inline: auto;
	}

	.content > :global(* + *) {
		margin-top: 1rem;
	}

	.content :global(h1),
	.content :global(h2),
	.content :global(h3),
	.content :global(h4),
	.content :global(h5) {
		margin: 1.5rem 0;
	}

	.content :global(img) {
		border-radius: 1.5rem;
		box-shadow: var(--shadow-sm);
		background: var(--gradient-subtle);
		border: 1px solid var(--gray-800);
	}

	.back-link,
	.content :global(a) {
		text-decoration: 1px solid underline transparent;
		text-underline-offset: 0.25em;
		transition: text-decoration-color var(--theme-transition);
	}

	.back-link:hover,
	.back-link:focus,
	.content :global(a:hover),
	.content :global(a:focus) {
		text-decoration-color: currentColor;
	}

	@media (min-width: 50em) {
    .ablog {
      display: inline-block;
      margin-left: 0.5rem;
    }

		.back-link {
			display: flex;
			align-self: flex-start;
		}

		.details {
			flex-direction: row;
			gap: 2.5rem;
		}

		.content :global(blockquote) {
			font-size: var(--text-2xl);
		}
	}

	.course {
		max-width: 100ch;
		margin-inline: auto;
		width: 100%;
		padding: 0 20px;
	}
</style>
